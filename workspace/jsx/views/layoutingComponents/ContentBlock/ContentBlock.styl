@require '../../../../stylus/variables.styl'

.content-block
	width 100%
	box-sizing border-box
	padding 70px 90px 80px

	&.alt
		background-color $stripBackground

	h1,
	p
		width 100%
		display block
		max-width $contentMaxWidth
		margin-right auto
		margin-left auto
		box-sizing border-box

		a
			padding-bottom 4px
			border-bottom 2px solid

	h1
		margin-top 10px
		margin-bottom 20px

	p
		margin-top 5px
		margin-bottom 5px
		font-size 18px
		line-height 26px
		padding 3px
